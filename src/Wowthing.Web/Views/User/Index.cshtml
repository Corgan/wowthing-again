@model UserViewModel
@{
    ViewData["Title"] = Model.User.UserName;
}

<div id="app">
    <!-- jank town -->
    <table>
        @foreach (var character in Model.Characters.OrderByDescending(c => c.Level).ThenBy(c => c.Name))
        {
            <tr>
                <td>
                    <img src="https://img.wowthing.org/@(Model.GetRaceIcon(character.Gender, character.RaceId)).png" alt="@character.Gender @character.RaceId" height="20" width="20" />
                </td>
                <td>@character.ClassId</td>
                <td>@character.Name</td>
                <td>@character.RealmId</td>
                <td>@character.Level</td>
            </tr>
        }
    </table>
</div>
